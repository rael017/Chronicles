{
    "name": "horus/chronicles",
    "description": "Sistema modular de rastreamento, auditoria e logging para aplicações PHP modernas.",
    "type": "library",
    "license": "MIT",
     "bin": [
        "bin/chronicle"
    ],
    "authors": [
        {
            "name": "Felipe Raphaeç"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-pcntl": "*",
        "ext-pdo": "*",
        "predis/predis": "^2.1",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "extra": {
        "horus": {
            "publish": {
                "config": {
                    "source": "config/chronicles.php",
                    "destination": "config/chronicles.php"
                }
                
            }
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Horus\\Chronicles\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Horus\\Chronicles\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
